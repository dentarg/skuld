#!/bin/sh

usage=$(cat <<USAGE
You need to install rerun and dotenv to use this.

  gem install rerun dotenv\n
USAGE)

command -v rerun >/dev/null 2>&1 || { echo >&2 "$usage"; exit 1; }
command -v dotenv >/dev/null 2>&1 || { echo >&2 "$usage"; exit 1; }

rerun --ignore "**/*.haml" \
    -- dotenv bundle exec puma
